@model ABC_Retail.Models.Customer
@{
    ViewData["Title"] = "Create Customer";
}
<h2>Create Customer</h2>

<form asp-action="Create" method="post">
    <div class="mb-3"><label asp-for="FirstName"></label><input asp-for="FirstName" class="form-control" /></div>
    <div class="mb-3"><label asp-for="LastName"></label><input asp-for="LastName" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Email"></label><input asp-for="Email" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Phone"></label><input asp-for="Phone" class="form-control" /></div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
