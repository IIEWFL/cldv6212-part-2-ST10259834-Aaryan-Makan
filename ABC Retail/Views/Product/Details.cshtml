@model ABC_Retail.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h2>Product Details</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.ProductName</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>
    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

@if (ViewBag.ImageUrl != null)
{
    <p><img src="@ViewBag.ImageUrl" alt="image" style="max-height:200px;" /></p>
}

<p><a class="btn btn-secondary" asp-action="Index">Back</a></p>
