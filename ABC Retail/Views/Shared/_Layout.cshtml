@{
    var title = ViewData["Title"] as string ?? "ABC Retail";
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    Func<string, string> active = name => ctrl == name.ToLowerInvariant() ? "active" : "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - ABC Retail</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark brandbar sticky-top shadow-lg">
        <div class="container">
            <a class="navbar-brand fw-bold brand-title" asp-controller="Home" asp-action="Index">ABC Retail</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav"
                    aria-controls="topnav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <nav id="topnav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Home")" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-fill me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Customer")" asp-controller="Customer" asp-action="Index">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Product")" asp-controller="Product" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Order")" asp-controller="Order" asp-action="Index">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Queue")" asp-controller="Queue" asp-action="Index">Queues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-big @active("Contracts")" asp-controller="Contracts" asp-action="Index">Contracts</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top mt-5">
        <div class="container small text-muted py-3">
            © @DateTime.UtcNow.Year ABC Retail
        </div>
    </footer>

    @if (!string.Equals(ctrl, "home", StringComparison.OrdinalIgnoreCase))
    {
        <a class="fab-home" asp-controller="Home" asp-action="Index" title="Home">
            <i class="bi bi-house-fill"></i>
        </a>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
